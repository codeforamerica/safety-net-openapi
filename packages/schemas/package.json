{
  "name": "@safety-net/schemas",
  "version": "1.0.0",
  "description": "OpenAPI schemas, validation, and overlay resolution for Safety Net APIs",
  "type": "module",
  "exports": {
    "./overlay": "./src/overlay/overlay-resolver.js",
    "./validation": "./src/validation/openapi-validator.js",
    "./loader": "./src/validation/openapi-loader.js",
    "./patterns": "./src/validation/pattern-validator.js"
  },
  "scripts": {
    "test": "node --test tests/unit/*.test.js",
    "validate": "npm run validate:syntax && npm run validate:patterns",
    "validate:syntax": "node scripts/validate-openapi.js",
    "validate:lint": "npx spectral lint 'openapi/*.yaml' --ignore-unknown-format",
    "validate:patterns": "node scripts/validate-patterns.js",
    "validate:state": "node scripts/validate-state.js",
    "validate:all-states": "node scripts/validate-state.js --all",
    "overlay:resolve": "node scripts/resolve-overlay.js",
    "overlay:list": "node scripts/resolve-overlay.js --list",
    "api:new": "node scripts/generate-api.js"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.7.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.15.0"
  }
}
